<Window x:Class="Secrecy.ListChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Secrecy"
             mc:Ignorable="d" KeyDown="onKeyDown" WindowStyle="None">
    <StackPanel>
        <TextBlock Text="Choose an encryption key!"></TextBlock>
        <ListBox x:Name="ListElement" KeyDown="onKeyDown"/>
    </StackPanel>
</Window>
